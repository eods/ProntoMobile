@model ProntoMobile.Web.Models.DetalleUserBDViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BD</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBD" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="IdBD" class="control-label"></label>
                <select asp-for="IdBD" asp-items="Model.Bases" class="form-control"></select>
                <span asp-validation-for="IdBD" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-success">Volver al usuario</a>
            </div>
        </form>
    </div>
</div>
